    <%= form_for @subscriber do |f| %>
      <div class="join-field">
        <%= f.text_field :name, { placeholder: 'Name' } %>
      </div>

      <div class="join-field">
        <%= f.email_field :email, { placeholder: 'Email' } %>
      </div>

      <div class="join-btn">
        <%= f.submit 'Submit', { id: 'submit-btn' } %>
      </div>
      <%= image_tag 'computer.png', { class: 'computer' } %>
    <% end %>
  </div>
