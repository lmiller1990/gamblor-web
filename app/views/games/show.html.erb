<div class="game_show">

  <div>
    <%= @game.date.strftime("%Y/%m/%d") %>
  </div>

  <% if @game.winner_id && @game.loser_id %>

    <span class="winner"><%= @game.winner.name %></span> vs <%= @game.loser.name %>

  <% else %>

    <%= @game.blue_side_team.name %> vs <%= @game.red_side_team.name %>

  <% end %>

  (<%= @game.match_uuid %>)
</div>

<br>

<div>
  Red Side: <%= @game.red_side_team.name %> (<%= @game.red_side_team_win_odds %>)
</div>

<div>
  Blue Side: <%= @game.blue_side_team.name %> (<%= @game.blue_side_team_win_odds %>)
</div>

<br>

<div>
  First blood (<%= gametime(@game.first_blood_time) %>): 
  <%= @game.first_team_to_get('blood').try(:name) %> 
  Blue odds: <%= @game.blue_side_team_fb_odds %> Red odds: <%= @game.red_side_team_fb_odds %>
</div>

<div>
  First turret (<%= gametime(@game.first_turret_time) %>): 
  <%= @game.first_team_to_get('turret').try(:name) %> 
  Blue odds: <%= @game.blue_side_team_ft_odds %> Red odds: <%= @game.red_side_team_ft_odds %>
</div>

<div>
  First dragon (<%= gametime(@game.first_dragon_time) %>): 
  <%= @game.first_team_to_get('dragon').try(:name) %> 
  Blue odds: <%= @game.blue_side_team_fd_odds %> Red odds: <%= @game.red_side_team_fd_odds %>
</div>

<div>
  First herald:
  <%= @game.first_team_to_get('herald').try(:name) %> 
  Blue odds: <%= @game.blue_side_team_fh_odds %> Red odds: <%= @game.red_side_team_fh_odds %>
</div>

<div>
  First baron (<%= gametime(@game.first_baron_time) %>): <%= @game.first_team_to_get('baron').try(:name) %> 
  Blue odds: <%= @game.blue_side_team_fbaron_odds %> Red odds: <%= @game.red_side_team_fbaron_odds %>
</div>

<%= link_to 'Edit', edit_game_path(@game), method: :get %>

<%= button_to 'Duplicate', game_duplicate_index_path(@game), method: :post %>
