<h3>All Games</h3>

<div>
  <%= link_to 'New Game', new_game_url %>
</div>

<% @games.each do |game| %>

  <div data-test-game>
    <%= game.date.strftime("%Y/%m/%d") %> <%= game.blue_side_team.name %> vs <%= game.red_side_team.name %>
    <%= link_to 'Edit', edit_game_path(game), method: :get %>
  </div>

<% end %>
